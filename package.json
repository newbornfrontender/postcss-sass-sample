{
  "name": "postcss-sass-sample",
  "version": "1.0.0",
  "description": "PostCSS and SASS sample",
  "repository": "git@github.com:newbornfrontender/postcss-sass-sample.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write **/*.{js,json,md}",
    "lint:check": "stylelint-config-prettier-check",
    "lint:fix": "stylelint --fix **/*.css",
    "clean": "rm -rf dist",
    "compile": "yarn clean && postcss src -d dist",
    "compile:start": "yarn clean && yarn compile -w",
    "compile:build": "yarn clean && yarn compile -m --env production"
  },
  "devDependencies": {
    "cssnano": "4.1.10",
    "postcss-cli": "6.1.2",
    "postcss-mixins": "6.2.1",
    "postcss-sorting": "4.1.0",
    "precss": "4.0.0",
    "prettier": "1.17.0",
    "stylelint": "10.0.1",
    "stylelint-config-prettier": "5.0.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "2.2.1",
    "stylelint-prettier": "1.0.6"
  }
}
