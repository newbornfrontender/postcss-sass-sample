{
  "extends": [
    "stylelint-config-standard",
    "stylelint-prettier/recommended"
  ],

  "plugins": [
    "stylelint-order"
  ],

  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["define-mixin", "mixin"]
    }],

    "function-whitespace-after": "never",

    "order/order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "at-rules",
      "rules"
    ],

    "order/properties-alphabetical-order": true
  }
}
